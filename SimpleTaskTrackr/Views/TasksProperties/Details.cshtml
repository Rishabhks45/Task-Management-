@model SimpleTaskTrackr.Models.SimpleTaskTrackModel.TasksProperties
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Details - Task Management System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="/css/Details.css" rel="stylesheet" />
</head>
<body>

    <div class="task-details-container">
        <div class="task-header">
            <h1>@Model.TaskTitle</h1>
            <div class="task-status">
                <i class="fas fa-check-circle"></i>
                @Model.TaskStatus
            </div>
        </div>

        <div class="task-content">
            <div class="info-grid">
                <div class="info-item">
                    <h3><i class="fas fa-calendar"></i> Due Date</h3>
                    <p>@Model.TaskDueDate.ToString("MMM dd, yyyy")</p>
                </div>
                <div class="info-item">
                    <h3><i class="fas fa-chart-line"></i> Status</h3>
                    <p>@Model.TaskStatus</p>
                </div>
                <div class="info-item">
                    <h3><i class="fas fa-clock"></i> Created On</h3>
                    <p>@Model.CreatedOn.ToString("MMM dd, yyyy HH:mm")</p>
                </div>
                <div class="info-item">
                    <h3><i class="fas fa-history"></i> Last Updated</h3>
                    <p>@Model.LastUpdatedOn.ToString("MMM dd, yyyy HH:mm")</p>
                </div>
                <div class="info-item">
                    <h3><i class="fas fa-clock"></i> CreatedBy</h3>
                    <p>@Model.CreatedBy</p>
                </div>
                <div class="info-item">
                    <h3><i class="fas fa-history"></i> Last Updated By</h3>
                    @if (ViewBag.UpdateBy == "Null")
                    {
                        <p>Not Updated By Anyone</p>
                    }
                    else
                    {
                    <p>@ViewBag.UpdateBy</p>
                    }
                </div>
            </div>

            <div class="content-sections">
                <div class="task-description">
                    <h2><i class="fas fa-align-left"></i> Description</h2>
                    <div class="description-content">
                        @Html.Raw(Model.TaskDescription)
                    </div>
                </div>

                <div class="task-remarks">
                    <h2><i class="fas fa-comment-alt"></i> Remarks</h2>
                    <p>@Model.TaskRemarks</p>
                </div>
            </div>

            <div class="action-buttons">             
                <a class="btn btn-primary" asp-action="Edit" asp-controller="TasksProperties" asp-route-id="@Model?.TaskId"><i class="fas fa-edit"></i>Edit</a>
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Home"><i class="fas fa-arrow-left"></i>Back To List</a>
            </div>
        </div>
    </div>
</body>
</html>